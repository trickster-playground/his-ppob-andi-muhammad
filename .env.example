#--------------------------------------------------------------------
# Example Environment Configuration file
#
# This file can be used as a starting point for your own
# custom .env files, and contains most of the possible settings
# available in a default install.
#
# By default, all of the settings are commented out. If you want
# to override the setting, you must un-comment it by removing the '#'
# at the beginning of the line.
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

# Set the environment for the application (development, production, etc.)
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

# Base URL for the application (for development or production)
app.baseURL = 'https://${RAILWAY_STATIC_URL}'
app.apiURL = 'https://take-home-test-api.nutech-integrasi.com'  # Replace with your API URL

# If you have trouble with `.`, you could also use `_` for variable names.
# app_baseURL = ''
# app.forceGlobalSecureRequests = false
# app.CSPEnabled = false

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

# Database configuration
database.default.hostname = localhost  # Set the database host (usually localhost for local dev)
database.default.database = his-ppob-andi-muhammad  # Database name for your project
database.default.username = root  # Database username (e.g., 'root' for local dev)
database.default.password = your_database_password  # Change this to your actual DB password
database.default.DBDriver = MySQLi  # Database driver, use 'MySQLi' for MySQL databases
database.default.DBPrefix =  # If you are using a table prefix, specify it here
database.default.port = 3306  # Default MySQL port

# If you use MySQLi as tests, first update the values of Config\Database::$tests.
# database.tests.hostname = localhost
# database.tests.database = ci4_test
# database.tests.username = root
# database.tests.password = root
# database.tests.DBDriver = MySQLi
# database.tests.DBPrefix =
# database.tests.charset = utf8mb4
# database.tests.DBCollat = utf8mb4_general_ci
# database.tests.port = 3306

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

# Set an encryption key if you're using encryption in your app.
# encryption.key = your_encryption_key  # Uncomment and set a secure key if needed

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

# Session configuration
session.driver = 'CodeIgniter\Session\Handlers\FileHandler'  # Use FileHandler for session management
session.savePath = null  # Define the path where session files will be stored (leave null to use default)

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

# Set the logging threshold. 4 is a good level for development.
# logger.threshold = 4  # Uncomment and set it to your desired level (e.g., 1, 2, 3, 4)
